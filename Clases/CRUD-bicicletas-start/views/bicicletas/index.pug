extends ../layout

block content 
    h1 Listado de bicicletas
    table.table 
        thead 
            tr 
                th ID 
                th Color 
                th Modelo 
                th Ubicacion
        tbody 
            each bici in bicis 
                tr
                    td=bici.id
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion 
                    td
                        form.inline(method='post' action='/bicicletas/delete')
                            input(type='hidden' name='id' value=bici.id)
                            button.link-button(type='submit')
    a(href='/') Home